{
  "custom": {},
  "params": {
    "SensorNum": 2
  },
  "propConfig": {
    "params.SensorNum": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 342,
      "width": 300
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Image"
        },
        "position": {
          "basis": "52px",
          "grow": 1
        },
        "props": {
          "fit": {
            "mode": "contain"
          },
          "source": "/system/images/Builtin/icons/48/monitor_lock.png"
        },
        "type": "ia.display.image"
      },
      {
        "meta": {
          "name": "Sensor"
        },
        "position": {
          "basis": "32px",
          "grow": 1
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "expression": "concat(\"Sensor \",{view.params.SensorNum})"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "textStyle": {
            "classes": "Header"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "LedDisplay"
        },
        "position": {
          "align": "center",
          "basis": "45px",
          "grow": 1
        },
        "propConfig": {
          "props.value": {
            "binding": {
              "config": {
                "fallbackDelay": 2.5,
                "mode": "indirect",
                "references": {
                  "SensorNum": "{view.params.SensorNum}"
                },
                "tagPath": "[default]Sensor {SensorNum}/Reading tag"
              },
              "type": "tag"
            }
          }
        },
        "props": {
          "style": {
            "textAlign": "center"
          }
        },
        "type": "ia.display.led-display"
      },
      {
        "meta": {
          "name": "MultiStateButton"
        },
        "position": {
          "basis": "187px",
          "grow": 1
        },
        "propConfig": {
          "props.controlValue": {
            "binding": {
              "config": {
                "bidirectional": true,
                "fallbackDelay": 2.5,
                "mode": "indirect",
                "references": {
                  "SensorNum": "{view.params.SensorNum}"
                },
                "tagPath": "[default]Sensor {SensorNum}/Mode tag"
              },
              "type": "tag"
            }
          },
          "props.indicatorValue": {
            "binding": {
              "config": {
                "bidirectional": true,
                "fallbackDelay": 2.5,
                "mode": "indirect",
                "references": {
                  "SensorNum": "{view.params.SensorNum}"
                },
                "tagPath": "[default]Sensor {SensorNum}/Mode tag"
              },
              "type": "tag"
            }
          }
        },
        "props": {
          "states": [
            {
              "selectedStyle": {
                "backgroundColor": "#FFF275",
                "classes": ""
              },
              "text": "Off",
              "unselectedStyle": {
                "classes": ""
              },
              "value": 0
            },
            {
              "selectedStyle": {
                "backgroundColor": "#F84553",
                "classes": ""
              },
              "text": "On",
              "unselectedStyle": {
                "classes": ""
              },
              "value": 1
            },
            {
              "selectedStyle": {
                "backgroundColor": "#7CEA9C",
                "classes": ""
              },
              "text": "Calibrate",
              "unselectedStyle": {
                "classes": ""
              },
              "value": 2
            }
          ]
        },
        "type": "ia.input.multi-state-button"
      }
    ],
    "meta": {
      "name": "root"
    },
    "position": {
      "grow": 1,
      "shrink": 1
    },
    "props": {
      "direction": "column"
    },
    "type": "ia.container.flex"
  }
}